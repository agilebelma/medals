{
  "name": "grads",
  "description": "a profile explorer of software developers",
  "version": "3.0.1",
  "homepage": "https://github.com/enspiral-dev-academy/grads",
  "author": "EDA",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git://github.com/enspiral-dev-academy/grads.git"
  },
  "scripts": {
    "dev": "nodemon --watch server & webpack --config ./client/webpack.config.js --watch",
    "e2e:sh": "cd ./test/e2e && codeceptjs shell",
    "e2e:debug": "codeceptjs run -c ./test/e2e/codecept.json --debug",
    "e2e": "codeceptjs run -c ./test/e2e/codecept.json && exit 0",
    "knex": "knex --knexfile ./server/db/knexfile.js",
    "lint": "eslint client server test --ignore-pattern 'bundle.js' && exit 0",
    "postinstall": "webpack --config ./client/webpack.config.js && npm run knex migrate:latest",
    "test": "jest test/client test/server && exit 0",
    "knex": "knex --knexfile ./server/db/knexfile.js",
    "start": "node server"
  },
  "babel": {
    "presets": ["es2015", "react", "stage-0"]
  },
  "jest": {
    "moduleNameMapper": {
      "\\.(css|less)$": "identity-obj-proxy"
    }
  },
  "precommit": "lint, test, e2e",
  "dependencies": {
    "babel-core": "^6.13.2",
    "babel-jest": "^21.0.2",
    "babel-loader": "^6.2.4",
    "babel-preset-es2015": "^6.13.2",
    "babel-preset-react": "^6.11.1",
    "babel-preset-stage-0": "^6.24.1",
    "body-parser": "^1.17.2",
    "dotenv": "^4.0.0",
    "eslint": "^4.6.1",
    "eslint-config-standard": "^10.2.1",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-node": "^5.1.1",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-react": "^6.1.2",
    "eslint-plugin-standard": "^3.0.1",
    "express": "^4.15.3",
    "express-jwt": "^5.3.0",
    "font-awesome": "^4.7.0",
    "input-moment": "^0.3.5",
    "jsdom": "^11.2.0",
    "jsonwebtoken": "^7.4.3",
    "jwt-decode": "^2.2.0",
    "knex": "^0.13.0",
    "moment": "^2.18.1",
    "pg": "^7.2.0",
    "prop-types": "^15.5.10",
    "purecss": "^1.0.0",
    "raw-loader": "^0.5.1",
    "react": "^15.3.0",
    "react-dom": "^15.3.0",
    "react-modal": "^2.3.2",
    "react-redux": "^4.4.5",
    "react-router-dom": "^4.1.2",
    "redux": "^3.5.2",
    "redux-thunk": "^2.1.0",
    "sodium": "^2.0.1",
    "style-loader": "^0.18.2",
    "superagent": "^2.2.0",
    "tachyons": "^4.8.1",
    "webpack": "^2.6.1"
  },
  "devDependencies": {
    "babel-register": "^6.26.0",
    "codeceptjs-nightmare": "^1.1.0",
    "enzyme": "^2.8.2",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^21.1.0",
    "nodemon": "^1.11.0",
    "pre-commit": "^1.2.2",
    "react-addons-test-utils": "^15.6.0",
    "react-test-renderer": "^15.5.4",
    "redux-mock-store": "^1.3.0",
    "sqlite3": "^3.1.9",
    "supertest": "^3.0.0",
    "webpack-dev-server": "^2.4.5"
  }
}
